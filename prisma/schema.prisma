generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contacts  Contact[]
  notes     Note[]
}

model Contact {
  id              String    @id @default(cuid())
  userId          String
  fullName        String
  email           String?
  company         String?
  title           String?
  lastContactDate DateTime?
  strengthScore   Int       @default(1)
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userNotes       Note[]
}

model Note {
  id        String   @id @default(cuid())
  userId    String
  contactId String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  contact   Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
}